<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_calibration_certification_tree" model="ir.ui.view">
        <field name="name">mgmtsystem_calibration.certification.tree</field>
        <field name="model">mgmtsystem_calibration.certification</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Certifications">
                <field name="name" string="Certification Identification"/>
                <field name="certificationtype_id"/>
                <field name="equipment"/>
                <field name="serial_number"/>
                <field name="is_client_equipment"/>
                <field name="client_id" attrs="{'invisible':[('is_client_equipment', '=', False)]}"/>
                <field name="service_order_number" attrs="{'invisible':[('is_client_equipment', '=', False)]}"/>
                <field name="calibration_date"/>
                <field name="valid_to_date"/>
                <field name="issuer_id"/>
                <field name="additional_notes"/>
            </tree>
        </field>
    </record>

    <record id="view_calibration_certification_form" model="ir.ui.view">
        <field name="name">mgmtsystem_calibration.certification.form</field>
        <field name="model">mgmtsystem_calibration.certification</field>
        <field name="arch" type="xml">
            <form string="Certificate Information">
                <sheet>
                    <h1>
                        <field name="name" string="Certification Identification"/>
                    </h1>
                    <group name="main" string="Equipment Identification">
                        <field name="equipment"/>
                        <field name="serial_number"/>
                    </group>
                    <group name="dates" col="4">
                        <field name="is_client_equipment"/>
                        <field name="client_id" attrs="{'invisible':[('is_client_equipment', '=', False)]}"/>
                        <field name="service_order_number" attrs="{'invisible':[('is_client_equipment', '=', False)]}"/>
                        <field name="calibration_date"/>
                        <field name="valid_to_date"/>
                    </group>
                    <group name="partner_info" col="4">
                        <field name="certificationtype_id"/>
                        <field name="issuer_id"/>
                        <field name="additional_notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_calibration_certification_search" model="ir.ui.view">
        <field name="name">mgmtsystem_calibration.certification.form</field>
        <field name="model">mgmtsystem_calibration.certification</field>
        <field name="arch" type="xml">
            <search string="Search Certifications">
                <field name="name"/>
                <field name="issuer_id" string="Issued By"/>
                <group expand="0" name="group_by" string="Group By">
                    <filter name="client_id" string="Client" context="{'group_by' : 'employee_id'}" />
                    <filter name="issuer_id" string="Issued By" context="{'group_by': 'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="open_mgmtsystem_calibration_certification" model="ir.actions.act_window">
        <field name="name">Certifications</field>
        <field name="res_model">mgmtsystem_calibration.certification</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
